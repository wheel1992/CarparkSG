<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="displayOptions">useLogo</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/toolbar_primary_text</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="colorControlNormal">@android:color/white</item>

    </style>


    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>


    <style name="RecyclerViewStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="TextViewStyle">
        <item name="android:typeface">sans</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextCaptionStyle" parent="@style/TextViewStyle">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:layout_height">@dimen/text_caption_height</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="CardViewHeaderAreaStyle">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="CardViewImageStyle">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="CardViewTextBigTitleStyle" parent="@style/TextViewStyle">
        <item name="android:textSize">@dimen/text_card_view_big_title</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left</item>
    </style>


    <style name="CardViewTextTitleStyle" parent="@style/TextViewStyle">
        <item name="android:textSize">@dimen/text_card_view_title</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="CardViewTextSubTitleStyle" parent="@style/TextViewStyle">
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="CardViewTextCaptionStyle" parent="@style/TextCaptionStyle">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:gravity">left|center_horizontal</item>
    </style>


    <style name="CardViewActionAreaStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppCompat.Button.Flat" parent="Base.TextAppearance.AppCompat">
        <item name="android:background">@drawable/btn_flat_selector</item>
        <item name="android:minWidth">@dimen/btn_flat_min_width</item>
        <item name="android:minHeight">@dimen/btn_flat_min_height</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/btn_flat_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/btn_flat_padding</item>
        <item name="android:paddingRight">@dimen/btn_flat_padding</item>
        <item name="android:layout_marginLeft">@dimen/btn_flat_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_flat_margin</item>
    </style>

    <style name="AppCompat.Button.Flat.light" parent="AppCompat.Button.Flat">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
