<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/text_setting_list_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Primary Text"
            android:textSize="@dimen/text_primary"
            android:textColor="@color/primary_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/text_setting_list_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Secondary Text"
            android:textSize="@dimen/text_secondary"
            android:textColor="@color/secondary_text"
            android:layout_alignLeft="@+id/text_setting_list_title"
            android:layout_below="@+id/text_setting_list_title" />

    </RelativeLayout>

</RelativeLayout>
